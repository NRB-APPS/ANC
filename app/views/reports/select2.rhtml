<html>
  <head>
    <title>Cohort Report Selection</title>
<%#= stylesheet_link_tag "form" %>
<%#= stylesheet_link_tag fancy_or_high_contrast_touch %>
    <link href="/stylesheets/cohort.css" media="screen" rel="stylesheet" type="text/css" />
    <script type="text/javascript" language="javascript">
      <!--
      tt_cancel_destination = '/clinic';
      var minYear = 2008;

      function $(id){
        return document.getElementById(id);
      }

      //-->
    </script>
    <style>
      #Unknown {display: none;}
      #num {display: none;}
    </style>
  </head>
  <body>
    <%

    min = 2008
    max = (session[:datetime] ||= Time.now).strftime("%Y").to_i

    array = []

    (min..max).each{|yr| array << yr}

    quarters = []
    qtr = []

    i = 1

    array.each do |a|
      date = Date.parse("1.1.#{a}")

      4.times do
        if date > Date.today
          break
        end

        qtr << {"name" => "Q" + i.to_s + " " + a.to_s,
          "min" => date.strftime("%Y-%m-%d"),
          "max" => (date+3.month-1.day).strftime("%Y-%m-%d")}

        quarters << [date, date+3.month-1.day]
        date += 3.month
        i += 1
      end

      # Push year
      qtr << a

      i = 1
    end
    quarters

    open = false
    %>

    <form id="frmReport" action="/reports/pepfar_report" method="post">




      <select name="start_year" helpText="Select Start Year:">

        <option></option>
        <% array.reverse.each do |y| %>
            <option><%= y %></option>
        <% end %>
      </select>

    <select name="start_month" helpText="Select Start Month:">
      <option></option>
      <option value="1">January</option>
      <option value="2">February</option>
      <option value="3">March</option>
      <option value="4">April</option>
      <option value="5">May</option>
      <option value="6">June</option>
      <option value="7">July</option>
      <option value="8">August</option>
      <option value="9">September</option>
      <option value="10">October</option>
      <option value="11">November</option>
      <option value="12">December</option>
    </select>

      <select name="end_year" helpText="Select End Year:">

        <option></option>
        <% array.reverse.each do |y| %>
            <option><%= y %></option>
        <% end %>
      </select>

      <select name="end_month" helpText="Select End Month:">
        <option></option>
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
      </select>

  </form>
</body>
</html>
